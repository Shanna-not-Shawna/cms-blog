<section class="authored-by">
  <h2>Welcome, {{name}}! Here are your recent posts: </h2>
</section>
{{#if logged_in}}
    <a href="#newPost">
    <button id="newPostButton" type="button" class="btn btn-outline-dark">Post a new Recipe</button>
    </a>
{{/if}}
<section>

 <main class="recent-posts">
    {{#each posts as |post|}}
    <div class="your-posts">
    </div>
    <div class='your-post'>
      <h4 class="card-title">{{post.title}} on {{format_date post.date_created}}</h4>
      <p class="card-text">{{post.content}}</p>
      <a href="/post/{{post.id}}" class="btn btn-primary">View Comments</a>
      <a href="/updatepost/{{post.id}}" class="btn btn-primary">Update Post</a>
      <button class="btn btn-primary" data-id="{{post.id}}">Delete This Post</button>
    </div>
    {{/each}}

<a name="newPost">
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" rows="10"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post it!</button>
      </div>
    </form>
  </div>
  </main>
</section>
</a>
<script src="/js/dashboard.js"></script>