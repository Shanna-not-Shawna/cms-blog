<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Post:</h3>
    {{log this}}
    <form data-id="{{id}}" class="form update-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input value="{{title}}" class="form-input" type="text" id="post-title" name="title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea placeholder="{{content}}" class="form-input" id="post-content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-info btn-sm" >Update Post</button>
      </div>
    </form>
  </div>

  <script src="/js/updatepost.js"></script>