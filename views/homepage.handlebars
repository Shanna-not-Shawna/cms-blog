<main class='feed'>
      {{#each posts as |post|}}

      <div class='post card'>

        <div class="card-body">

          <h4 class="card-title">{{post.title}} by <b>{{post.user.name}} on {{format_date post.date_created}}</b></h4>
          <p class="card-text">{{post.content}}</p>
          <a href="/post/{{post.id}}" class="btn btn-primary">View Recipe</a>
        </div>
      </div>
      {{/each}}
    </main>


<script src='./js/login.js'></script>