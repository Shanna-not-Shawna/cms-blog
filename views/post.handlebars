<div class='post card'>
  <div class="card-body">
    <h2 class="card-title">{{title}} by {{user.name}}</h2>

    <p class="card-text">{{content}}</p>
  

    {{#if logged_in}}
    <button type="button" class="btn btn-outline-dark" id="addCommentButton">Add a Comment</button>
    {{else}}
    <a class="btn btn-primary btn-lg btn-outline-light" href="/login">Login to Make a Comment</a>
    {{/if}}

    <form class="form new-comment-form" style="display: none;">
      <div class="form-group">
        <label for="content"></label>
        <input type="hidden" name="post_id" value="{{id}}" />
        <textarea class="form-control" id="content" rows="4" placeholder="Enter your comment"></textarea>
      </div>
      <button type="submit" id="postCommentButton" class="btn btn-primary">Post Comment</button>
    </form>
  </div>

  {{#each comments as |comment|}}
  <div class="card">

    <h5 class="card-title">{{comment.user.name}} on {{comment.created_at}}</h5>
    <p class="card-text">{{comment.content}}</p>
    
    <button  class="btn btn-primary" onclick="deleteComment({{comment.id}}">Delete</button>

    {{/each}}
  </div>

  <script src="/js/comment.js"></script>
